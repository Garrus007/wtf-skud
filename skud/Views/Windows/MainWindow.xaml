<Window x:Class="skud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:skud.Views.Controls"
        Title="Контроль пропусков" Height="650" Width="450"
        MinHeight="650" MinWidth="450"
        Background="#fff">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="База">
                <MenuItem Header="Должности"/>
                <MenuItem Header="Звания"/>
                <MenuItem Header="Пользователи"/>
                <MenuItem Header="История"/>
            </MenuItem>
            <MenuItem Header="Настройки"/>
            <MenuItem Header="О программе"/>
        </Menu>

        <Controls:AccessStatus Grid.Row="1" Margin="5 5 5 0" DataContext="{Binding AccessStatus}"/>
        <Controls:Arrows Grid.Row="2" Margin="5 5 5 0" DataContext="{Binding Direction}"/>
        <Controls:UserProfileCard Grid.Row="3" Margin="5 5 5 0" DataContext="{Binding Controller.User}"/>
        <Controls:LogView Grid.Row="4"  Margin="5 5 5 5" DataContext="{Binding Controller.EventLog}"/>

    </Grid>
</Window>
